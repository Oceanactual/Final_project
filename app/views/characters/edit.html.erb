<div>
  <div>
    <a href="/characters">View Characters</a>
  </div>
  <div>
    <h2>
      Edit character
    </h2>

    <form action="/modify_character/<%= @the_character.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_character.name %>">
      </div>

      <div>
        <label for="class_box">
          Class
        </label>

        <select type="text" id="class_box" name="query_class" value="<%= @the_character.clas %>">
          <% @classes.each do |clas|%>
            <option value="<%=clas.fetch("index")%>"><%=clas.fetch("name")%></option>
          <%end%>
        </select>
      </div>

      <div>
        <label for="level_box">
          Level
        </label>

        <select type="text" id="level_box" name="query_level" value="<%= @the_character.level %>">
          <% 20.times do |lvl|%>
            <option><%=lvl+1%></option>
          <%end%>
        </select>
      </div>

      <div>
        <label for="str_score_box">
          Str score
        </label>

        <input type="text" id="str_score_box" name="query_str_score" value="<%= @the_character.str_score %>">
      </div>

      <div>
        <label for="dex_score_box">
          Dex score
        </label>

        <input type="text" id="dex_score_box" name="query_dex_score" value="<%= @the_character.dex_score %>">

      </div>

      <div>
        <label for="con_score_box">
          Con score
        </label>

        <input type="text" id="con_score_box" name="query_con_score" value="<%= @the_character.con_score %>">

      </div>

      <div>
        <label for="int_score_box">
          Int score
        </label>

        <input type="text" id="int_score_box" name="query_int_score" value="<%= @the_character.int_score %>">

      </div>

      <div>
        <label for="wis_score_box">
          Wis score
        </label>

        <input type="text" id="wis_score_box" name="query_wis_score" value="<%= @the_character.wis_score %>">

      </div>

      <div>
        <label for="cha_score_box">
          Cha score
        </label>

        <input type="text" id="cha_score_box" name="query_cha_score" value="<%= @the_character.cha_score %>">
      </div>

      <div>
        <label for="total_hp_box">
          Total hp
        </label>

        <input type="text" id="total_hp_box" name="query_total_hp" value="<%= @the_character.total_hp %>">
      </div>

      <div>
        <label for="current_hp_box">
          Current hp
        </label>

        <input type="text" id="current_hp_box" name="query_current_hp" value="<%= @the_character.current_hp %>">
      </div>

      <div>
        <label for="gold_box">
          Gold
        </label>

        <input type="text" id="gold_box" name="query_gold" value="<%= @the_character.gold %>">
      </div>

    </div>

    <div>
      <div>
        <h2>
          Edit character prof
        </h2>

        <div>
          <input type="checkbox" id="str_save_box" name="query_str_save" value="1" <%= "checked" if @the_character_prof.str_save %>>

          <label for="str_save_box">
            Str save
          </label>
        </div>

        <div>
          <input type="checkbox" id="dex_save_box" name="query_dex_save" value="1" <%= "checked" if @the_character_prof.dex_save %>>

          <label for="dex_save_box">
            Dex save
          </label>
        </div>

        <div>
          <input type="checkbox" id="con_save_box" name="query_con_save" value="1" <%= "checked" if @the_character_prof.con_save %>>

          <label for="con_save_box">
            Con save
          </label>
        </div>

        <div>
          <input type="checkbox" id="int_save_box" name="query_int_save" value="1" <%= "checked" if @the_character_prof.int_save %>>

          <label for="int_save_box">
            Int save
          </label>
        </div>

        <div>
          <input type="checkbox" id="wis_save_box" name="query_wis_save" value="1" <%= "checked" if @the_character_prof.wis_save %>>

          <label for="wis_save_box">
            Wis save
          </label>
        </div>

        <div>
          <label for="chr_save_box">
            Cha save boolean
          </label>

          <input type="text" id="chr_save_box" name="query_chr_save" value="<%= @the_character_prof.chr_save%>">
        </div>

        <div>
          <input type="checkbox" id="athletics_box" name="query_athletics" value="1" <%= "checked" if @the_character_prof.athletics %>>

          <label for="athletics_box">
            Athletics
          </label>
        </div>

        <div>
          <input type="checkbox" id="acrobatics_box" name="query_acrobatics" value="1" <%= "checked" if @the_character_prof.acrobatics %>>

          <label for="acrobatics_box">
            Acrobatics
          </label>
        </div>

        <div>
          <input type="checkbox" id="sleight_of_hand_box" name="query_sleight_of_hand" value="1" <%= "checked" if @the_character_prof.sleight_of_hand %>>

          <label for="sleight_of_hand_box">
            Sleight of hand
          </label>
        </div>

        <div>
          <input type="checkbox" id="stealth_box" name="query_stealth" value="1" <%= "checked" if @the_character_prof.stealth %>>

          <label for="stealth_box">
            Stealth
          </label>
        </div>

        <div>
          <input type="checkbox" id="arcana_box" name="query_arcana" value="1" <%= "checked" if @the_character_prof.arcana %>>

          <label for="arcana_box">
            Arcana
          </label>
        </div>

        <div>
          <input type="checkbox" id="history_box" name="query_history" value="1" <%= "checked" if @the_character_prof.history %>>

          <label for="history_box">
            History
          </label>
        </div>

        <div>
          <input type="checkbox" id="investigation_box" name="query_investigation" value="1" <%= "checked" if @the_character_prof.investigation %>>

          <label for="investigation_box">
            Investigation
          </label>
        </div>

        <div>
          <input type="checkbox" id="nature_box" name="query_nature" value="1" <%= "checked" if @the_character_prof.nature %>>

          <label for="nature_box">
            Nature
          </label>
        </div>

        <div>
          <input type="checkbox" id="religion_box" name="query_religion" value="1" <%= "checked" if @the_character_prof.religion %>>

          <label for="religion_box">
            Religion
          </label>
        </div>

        <div>
          <input type="checkbox" id="animal_handling_box" name="query_animal_handling" value="1" <%= "checked" if @the_character_prof.animal_handling %>>

          <label for="animal_handling_box">
            Animal handling
          </label>
        </div>

        <div>
          <input type="checkbox" id="insight_box" name="query_insight" value="1" <%= "checked" if @the_character_prof.insight %>>

          <label for="insight_box">
            Insight
          </label>
        </div>

        <div>
          <input type="checkbox" id="medicine_box" name="query_medicine" value="1" <%= "checked" if @the_character_prof.medicine %>>

          <label for="medicine_box">
            Medicine
          </label>
        </div>

        <div>
          <input type="checkbox" id="perception_box" name="query_perception" value="1" <%= "checked" if @the_character_prof.perception %>>

          <label for="perception_box">
            Perception
          </label>
        </div>

        <div>
          <input type="checkbox" id="survival_box" name="query_survival" value="1" <%= "checked" if @the_character_prof.survival %>>

          <label for="survival_box">
            Survival
          </label>
        </div>

        <div>
          <input type="checkbox" id="deception_box" name="query_deception" value="1" <%= "checked" if @the_character_prof.deception %>>

          <label for="deception_box">
            Deception
          </label>
        </div>

        <div>
          <input type="checkbox" id="intimidation_box" name="query_intimidation" value="1" <%= "checked" if @the_character_prof.intimidation %>>

          <label for="intimidation_box">
            Intimidation
          </label>
        </div>

        <div>
          <input type="checkbox" id="persuasion_box" name="query_persuasion" value="1" <%= "checked" if @the_character_prof.persuasion %>>

          <label for="persuasion_box">
            Persuasion
          </label>
        </div>

        <div>
          <input type="checkbox" id="performance_box" name="query_performance" value="1" <%= "checked" if @the_character_prof.performance %>>

          <label for="performance_box">
            Performance
          </label>
        </div>

      </div>
      <button>
        Update character
      </button>
    </div>
  </form>
</div>
